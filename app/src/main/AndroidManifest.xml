<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scut.fundialect" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunDialect" >
        <activity
            android:name=".activity.TestActivity"
            android:exported="false" />
        <activity
            android:name=".activity.myself.MyselfActivity"
            android:exported="true"
            android:label="@string/title_activity_learn"
            android:theme="@style/Theme.FunDialect.NoActionBar" />
        <activity
            android:name=".activity.learn.LearnActivity"
            android:exported="true"
            android:label="@string/title_activity_learn"
            android:theme="@style/Theme.FunDialect.NoActionBar" />
        <activity
            android:name=".activity.dubing.DubingActivity"
            android:exported="true"
            android:label="@string/title_activity_dubing"
            android:theme="@style/Theme.FunDialect.NoActionBar" />
        <activity
            android:name=".activity.culture.CultureActivity"
            android:exported="true"
            android:label="@string/title_activity_culture"
            android:theme="@style/Theme.FunDialect.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.scut.fundialect.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>